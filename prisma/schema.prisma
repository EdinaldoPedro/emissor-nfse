// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- MODELAGEM CORRIGIDA E UNIFICADA ---

// Unificamos 'User' e 'Usuario' nesta tabela completa
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  senha     String   // Senha criptografada
  nome      String   
  tipo      String   @default("CLIENTE") // ADMIN ou CLIENTE
  
  // Dados da Empresa (para emitir nota depois)
  documento       String? // CPF ou CNPJ
  razaoSocial     String?
  nomeFantasia    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Adiciona data de atualização automática

  // Relacionamentos
  clientes      Cliente[]
  notasFiscais  NotaFiscal[]
}

model Cliente {
  id        String   @id @default(uuid())
  nome      String
  documento String   // CPF ou CNPJ
  email     String?
  endereco  String?
  
  // O cliente pertence a um User (Dono do SaaS)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  notas     NotaFiscal[]
  
  createdAt DateTime @default(now())
}

model NotaFiscal {
  id              String   @id @default(uuid())
  valor           Decimal
  descricao       String
  status          String   @default("RASCUNHO") // RASCUNHO, EMITIDA, CANCELADA
  
  // Quem está emitindo
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Para quem é a nota
  clienteId       String
  cliente         Cliente  @relation(fields: [clienteId], references: [id])
  
  createdAt       DateTime @default(now())
}